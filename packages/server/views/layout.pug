doctype html

html(lang='da')
  head
    meta(http-equiv="Content-Type", content="text/html; charset=UTF-8")
    meta(charset="UTF-8")
    title DAWA
    meta(name="viewport", content="width=device-width,initial-scale=1,shrink-to-fit=no")
    meta(name="description", content="Danmarks adresse web API")
    meta(name="author", content="Finn Jordal")
    link(href="/css/dawa.css", rel="stylesheet")
    link(rel="shortcut icon", href="/img/favicon.ico")
    script(src="https://cdn.aws.dk/assets/dawa-autocomplete2/1.0.0/dawa-autocomplete2.min.js")
  body
    nav.navbar.navbar-expand-lg.navbar-light.sticky-top
      a.navbar-brand(href="/") DAWA <span>-   Danmarks Adressers Web API</span>
      button.navbar-toggler(type="button", data-toggle="collapse", data-target="#navbarSupportedContent", aria-controls="navbarSupportedContent", aria-expanded="false", aria-label="Toggle navigation")
        span.navbar-toggler-icon
      div.collapse.navbar-collapse(id="navbarSupportedContent")
        ul.navbar-nav
          li.nav-item.dropdown
            a.nav-link.dropdown-toggle(href="#" id="navbarDropdown" role="button"
            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false",
            class={active: ['/dok/adresser', '/dok/stednavne', '/dok/dagi', '/dok/bbr', '/dok/matrikelkortet'].includes(path)}).
              Data
            div.dropdown-menu(aria-labelledby="navbarDropdown")
              a.dropdown-item(href='/dok/adresser') Adresser
              a.dropdown-item(href="/dok/dagi") DAGI
              a.dropdown-item(href="/dok/matrikelkortet") Matrikelkortet
              a.dropdown-item(href="/dok/bbr") BBR
              a.dropdown-item(href="/dok/stednavne") Stednavne
          li.nav-item
            a.nav-link(href='/dok/api', class={active: path.startsWith('/dok/api')}) API
          li.nav-item
            a.nav-link(href='/dok/guides', class={active: path.startsWith('/dok/guide')}) Guides
          li.nav-item
            a.nav-link(href='/dok/faq', class={active: path === '/dok/faq'}) FAQ
          li.nav-item
            a.nav-link(href='/dok/om', class={active: path === '/dok/om'}) Om

    block content
    div.container-fluid
      div.row
        footer
          div.footer-container.offset-sm-1.col-sm-10
            div.row
              div.col-sm-3
                h5 Kontakt
                ul
                  li <a href="https://digitaliser.dk/group/334445/forum">Support-forum</a>
                  li <a href="https://twitter.com/AWS_Suiten">Twitter</a>
                  li <a href="mailto:awssuiten@sdfe.dk">awssuiten@sdfe.dk</a>
              div.col-sm-3
                h5 Links
                ul
                  li <a href="/dok/om#vilkaar">Vilkår</a>
                  li <a href="/dok/om#privatlivspolitik">Privatlivspolitik</a>
                  li <a href="http://stats.pingdom.com/tdobb0hqaff9/1299924">Driftsstatus</a>
                  li <a href="https://sdfe.dk">Styrelsen for Dataforsyning og Effektivisering</a>
              div.col-sm-3
                h5 Se også
                ul
                  li <a href="https://aws.dk/">AWS Suiten</a>
                  li <a href="https://korttjenester.aws.dk/">Korttjenester</a>
                  li <a href="https://download.aws.dk/">Downloadtjenester</a>
              div.col-sm-3.footer-logo
                img(src='/img/logo-footer.svg')


    block scripts
      script(src="/js/dawa.js")
